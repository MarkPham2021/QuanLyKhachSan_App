<!doctype html>
<html lang="vi">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <title>Phong_RoomList</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <% include header%>
        </div>
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-9">
                <h2 style="color: red;">Danh Sách Phòng</h2>
                <br>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <% include leftsidebar%>
            </div>
            <div class="col-lg-9">
                <form class="form-inline" method="POST" action="/thuephong/dsphong">                    
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="tinhtrangid1" name="tinhtrangid" value="1">
                        <label class="form-check-label" for="tinhtrangid1">Phòng trống</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="tinhtrangid2" name="tinhtrangid" value="0">
                        <label class="form-check-label" for="tinhtrangid2">Phòng bận</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="tinhtrangid3" name="tinhtrangid" value="2" checked>
                        <label class="form-check-label" for="tinhtrangid2">All</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <button class="btn btn-success" type="submit">&nbsp;&nbsp;Xem&nbsp;&nbsp;</button>
                    </div>
                </form>

                <table class="table table-striped" width="100%">
                    <thead>
                        <tr width="100%" style="text-align: center;">
                            <th width="8%">STT</th>
                            <th width="14%">Phòng số</th>
                            <th width="20%">Loại phòng</th>
                            <th width="16%">Đơn giá (/ngày)</th>
                            <th width="16%">Tình trạng</th>
                            <th width="13%">Ngày thuê</th>
                            <th width="13%">Ngày Trả dự kiến</th>
                        </tr>
                    </thead>
                    <!-- Phong trong-->
                    <% let n=phongtrong.length; var i=0; %>
                        <% for (i=0; i<n; i++) { %>
                            <tr width="100%">
                                <td width="8%">
                                    <%=i +1 %>
                                </td>                                
                                <td width="14%">
                                    <%=phongtrong[i].PhongSo%>
                                </td>
                                <td width="20%">
                                    <%=phongtrong[i].LoaiPhongTen%>
                                </td>
                                <td width="16%" style="text-align: right;">
                                    <%=phongtrong[i].LoaiPhongGia%>
                                </td>
                                <td width="16%" style="text-align: right;">
                                    <%=phongtrong[i].TinhTrang%>
                                </td>
                                <td width="13%">
                                    &nbsp;
                                </td>
                                <td width="13%">
                                    &nbsp;
                                </td>
                            </tr>
                            <% } %>
                            <!-- Phong co khach-->
                            <% let l=phongcokhach.length %>
                                <% for (let j=0; j<l; j++) { %>
                                    <tr width="100%">
                                        <td width="8%">
                                            <%=i +j+1 %>
                                        </td>
                                        <td width="14%">
                                            <%=phongcokhach[j].PhongSo %>
                                        </td>
                                        <td width="20%">
                                            <%=phongcokhach[j].LoaiPhongTen %>
                                        </td>
                                        <td width="16%" style="text-align: right;">
                                            <%=phongcokhach[j].LoaiPhongGia %>
                                        </td>
                                        <td width="16%" style="text-align: right;">
                                            <%=phongcokhach[j].TinhTrang %>
                                        </td>
                                        <td width="13%">
                                            <%=phongcokhach[j].NgayThue %>
                                        </td>
                                        <td width="13%">
                                            <%=phongcokhach[j].NgayTraDuKien %>
                                        </td>
                                    </tr>
                                    <% } %>
                </table>
            </div>

        </div>
        <div class="row">
            <% include footer%>
        </div>
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous"></script>


</body>

</html>