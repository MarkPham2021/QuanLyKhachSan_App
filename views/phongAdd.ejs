<!doctype html>
<html lang="vi">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <title>Phong_AddNew</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <% include header%>
        </div>
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-9">
                <h2 style="color: red;">Thêm Mới Phòng</h2>
                <br>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <% include leftsidebar%>
            </div>
            <div class="col-lg-9">                
                <form class="grid" method="POST" action="/phong/create">
                    <div class="row">
                        <div class="input-group-text col-lg-5 mb-3">
                            <span class="input-group-text">Phòng Số:</span>
                            <input type="text" class="form-control" name="PhongSo" id="PhongSo" placeholder="Phòng số, vd: SA0102, NB0205" required>
                                
                        </div>
                        <div class="input-group-text col-lg-7 mb-3">
                            <span class="input-group-text">Loại phòng:</span>
                            <select type="number" class="form-control" name="LoaiPhongID" id="LoaiPhongID" required>
                                <option value="0">Chọn loại phòng...</option>
                                <% for(let i=0; i<loaiphong.length; i++){ %>
                                    <option value="<%- loaiphong[i].LoaiPhongID %>">
                                        <%= loaiphong[i].LoaiPhongID %> -- <%= loaiphong[i].LoaiPhongTen %> -- <%=
                                                    loaiphong[i].LoaiPhongGia %>
                                    </option>
                                    <% } %>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-group-text col-lg-7 mb-3">
                            <span class="input-group-text"> Khu Vực:</span>
                            <input type="text" class="form-control" name="KhuVuc" id="KhuVuc"
                                placeholder="Khu Vực,vd: A, B,.." required>
                        </div>
                        <div class="input-group-text col-lg-5 mb-3">
                            <span class="input-group-text"> Tầng: </span>
                            <input type="number" class="form-control" name="Tang" id="Tang"
                                placeholder="Tầng, vd: 0, 01, 11.." required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-group-text col-lg-12 mb-3">
                            <span for="MoTa" class="input-group-text"> Mô tả: </span>
                            <textarea rows="4" class="form-control" name="MoTa" id="MoTa"
                                placeholder="Mô tả, vd: phòng 1 giường đôi, view biển, diện tích 36 m2.." row="3" required></textarea>
                        </div>
                    </div>
                                        
                    <div class="btn-group" role="group">
                        <button class="btn btn-primary " type="submit"> LƯU DỮ LIỆU </button>
                        <button class="btn btn-info " type="reset"> Reset </button>
                    </div>
                </form>
                <br />
                <a class="btn btn-success" href="/phong" style="font-size: 100%;">Quay lại Danh mục Phòng</a>
                <br />
                <br />
            </div>

        </div>
        <div class="row">
            <% include footer%>
        </div>
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="/js/bootstrap.bundle.min.js"></script>


</body>

</html>