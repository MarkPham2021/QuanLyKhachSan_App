<!doctype html>
<html lang="vi">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <title>ChinhSach_AddNew</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <% include header%>
        </div>
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-9">
                <h2 style="color: red;">Lập Chính Sách Mới</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <% include leftsidebar%>
            </div>
            <div class="col-lg-9">
                <form class="grid" method="POST" action="/chinhsach/create">
                    <div class="row">
                        <div class="input-group-text col-lg-7 mb-3">
                            <span class="input-group-text" >Số khách được lưu trú tối đa 1 phòng:</span>
                            <input type="number" class="form-control" name="sokhachluutruToiDa" id="sokhachluutruToiDa" placeholder="người/phòng: 1,2,.." required>                                
                        </div>
                        <div class="input-group-text col-lg-5 mb-3">
                            <span class="input-group-text" id="inputGroup-text">Tỷ lệ phụ thu:</span>
                            <input type="number" class="form-control" name="tylePhuThu" id="tylePhuThu" placeholder="x%, vd: 20,25,.." required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-group-text col-lg-6 mb-3">
                            <span class="input-group-text" >Hệ số giá khách trong nước:</span>
                            <input type="number" class="form-control" name="hesogiaKhachTrongNuoc" id="hesogiaKhachTrongNuoc" placeholder="x%, vd: 100~ 100% =1" required>                                
                        </div>
                        <div class="input-group-text col-lg-6 mb-3">
                            <span class="input-group-text" id="inputGroup-text">Hệ số giá khách nước ngoài:</span>
                            <input type="number" class="form-control" name="hesogiaKhachNuocNgoai" id="hesogiaKhachNuocNgoai" placeholder="x%, vd: 120~ 120% =1.2" required>
                        </div>
                    </div>                    
                    <div class="row">
                        <div class="input-group-text col-lg-6 mb-3">
                            <% let d = new Date(); let mm = d.getMonth() +1; if (mm.toString().length <2){mm='0'+ mm}; let dd = d.getDate(); if (dd.toString().length <2){dd='0'+ dd}; let _d = d.getFullYear() + '-' + mm + '-' + dd; %>
                            <span class="input-group-text">Ngày bắt đầu hiệu lực:</span>
                            <input type="date" class="form-control" name="NgayHieuLuc" id="NgayHieuLuc" placeholder="ngày: mm/dd/yyyy" value="<%- _d %>">
                        </div>
                    </div>                  
                   
                    <div class="btn-group" role="group">
                        <button class="btn btn-primary " type="submit"> LƯU DỮ LIỆU </button>
                        <button class="btn btn-info " type="reset"> Reset </button>
                    </div>
                </form>
                <br />
                <a class="btn btn-success" href="/chinhsach" style="font-size: 100%;">Quay lại Danh sách Chính sách</a>
                <br />
                <br />
            </div>

        </div>
        <div class="row">
            <% include footer%>
        </div>
    </div>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>